root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{lua,obj,anm,scn,cam,tra}]
charset = shift_jis
indent_style = space
indent_size = 2
end_of_line = crlf

[*.{c,cpp,h,hpp,rc}]
charset = shift_jis

[*.md]
trim_trailing_whitespace = false
